appModule.controller('bisWarehouse', function ($scope, $http, clickDown, $uibModal, dialog) {
    $scope.warehousefilter = [{name: "status", param: 1}];
    $scope.param = {}
    $scope.$on('pageData', function ($event, msg) {
        //删除判断（弹框满足的验证函数）
        $scope.check = function () {
            //msg._getSelectedItems是一个数组，里面封装的是选中的行对象
            if (msg._getSelectedItems.length)//判断是否选择行（多行）
                for (var i in msg._getSelectedItems())
                    return msg._getSelectedItems()[i].status == "生效" && msg._getSelectedItems()[i].name == "2";//判断选择条件
        }
        //显示详情判断
        $scope.detailCheck = function () {
            if (msg._getSelectedItems().length == 1) return true;
        }
        //删除弹框
        $scope.deleteDemo = function () {
            //参数注释：弹框尺寸(sm小型，md中型，lg大大)，弹框满足的验证函数，弹框页面，弹框ctrl，弹框需要的数据，弹框点击涂层是否消失（static为不消失，默认为消失）
            return dialog('sm', $scope.check(), 'delete.html', 'wareDeleteCtrl', msg._getSelectedItems("id"), 'static')
        }
        //显示详情弹框
        $scope.detail = function () {
            return dialog('lg', $scope.detailCheck, 'detail.html', 'wareDetailCtrl', msg._getSelectedItems("id"), 'default');
        }
        //双击事件
        $scope.xxx = function () {
            console.log("hahaha")
        }
    })
})
//删除弹框ctrl
appModule.controller('wareDeleteCtrl', function ($scope, $uibModalInstance, data) {
    $scope.ok = function () {
        console.log(data);
        $uibModalInstance.close();
    };
    $scope.cancel = function () {
        $uibModalInstance.dismiss('cancel');
    };
})
//显示弹框ctrl
appModule.controller('wareDetailCtrl', function ($scope, $http, $uibModalInstance, data) {
    $http.get('testJson/updateWare.json',data).success(function(data){
        $scope.detail = data;
    })
    $scope.ok = function () {
        console.log(data);
        $uibModalInstance.close();
    };
    $scope.cancel = function () {
        $uibModalInstance.dismiss('cancel');
    };
})